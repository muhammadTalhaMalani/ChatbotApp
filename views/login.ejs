<!DOCTYPE html>
<html>

<head>
  <title></title>
  <link rel='stylesheet' href='/assets/css/style.css' />
  <style>
    .Error {
      border-color: var(--bs-danger) !important;
      padding-right: calc(1.5em + 16px) !important;
      background-repeat: no-repeat !important;
      background-position: right calc(0.375em + 4px) center !important;
      background-size: calc(0.75em + 8px) calc(0.75em + 8px) !important;
    }
  </style>
</head>

<body>
  <!--  Body Wrapper -->
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
    data-sidebar-position="fixed" data-header-position="fixed">
    <div
      class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
      <div class="d-flex align-items-center justify-content-center w-100">
        <div class="row justify-content-center w-100">
          <div class="col-md-8 col-lg-6 col-xxl-3">
            <div class="card mb-0">
              <div class="card-body">
                <a href="./index.html"
                  class="text-nowrap logo-img logo_login_text text-center justify-content-center py-3 w-100">
                  <img src="../assets/images/logos/Logo.png" width="50" alt="">
                  WhatsApp Bot
                </a>
                <p class="text-center">Your Social Campaigns</p>
                <form onsubmit="UserLogin(this); return false;" class="needs-validation" novalidate>
                  <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" required>
                    <div class="invalid-feedback">Please Enter Email.</div>
                  </div>
                  <div class="mb-4">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" required>
                    <div class="invalid-feedback">Please Enter Password.</div>
                  </div>
                  <button type="submit" class="btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2">Sign In</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="/assets/libs/jquery/dist/jquery.min.js"></script>
  <script src="/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/assets/js/sidebarmenu.js"></script>
  <script src="/assets/js/app.min.js"></script>
  <script src="/assets/libs/simplebar/dist/simplebar.js"></script>
  <script src="/assets/js/login.js"></script>

</body>

</html>